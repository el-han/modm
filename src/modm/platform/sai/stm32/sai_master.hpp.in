		using Mclk = typename Connector::template GetSignal<Gpio::Signal::Mclk{{ sai_block.lower() }}>;

		// Connector::disconnect();
		Fs::setInput(Gpio::InputType::Floating);
		Sck::setInput(Gpio::InputType::Floating);
		Sd::setInput(Gpio::InputType::Floating);
		Mclk::setInput(Gpio::InputType::Floating);
		Connector::connect();
	}

